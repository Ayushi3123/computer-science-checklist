<div class="container">
    <div class="row">
        <% @notes.each do |note| %>
            <div class="col-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= note.title %>
                        </h5>
                        <p class="card-text">
                            <%= note.content %>
                        </p>
                        
                        <%= link_to "Edit", [:edit, note], class:"card-link" %>
                        <a href="#" class="card-link">Delete</a>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>